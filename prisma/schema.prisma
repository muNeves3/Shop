// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime

  @@map("clients")
}

model Item {
  id          String  @id @default(uuid())
  name        String
  price       Decimal
  description String

  @@map("items")
}
